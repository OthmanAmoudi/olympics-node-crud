<div class="jumbortron text-center">
    <table class="table table-bordered table-hover table-striped">

        <thead>
            <tr>
                <th>Event Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>

            <% for (var event of events) { %>
            <tr>
                <td><%= event.name %></td>
                <td><%= event.description %></td>
                <td>
                    <a href="/events/<%= event.slug %>" class="btn btn-primary btn-sm"> View</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>